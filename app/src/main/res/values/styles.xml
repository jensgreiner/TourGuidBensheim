<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/TourGuideAppBarStyle</item>
    </style>

    <!-- TextView styles -->
    <style name="TextView_normal" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:paddingTop">@dimen/text_view_padding_top</item>
        <item name="android:paddingBottom">@dimen/text_view_padding_bottom</item>
        <item name="android:paddingStart">@dimen/text_view_padding_start_2x</item>
        <item name="android:paddingLeft">@dimen/text_view_padding_start_2x</item>
        <item name="android:paddingEnd">@dimen/text_view_padding_end_2x</item>
        <item name="android:paddingRight">@dimen/text_view_padding_end_2x</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="TextView_title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:paddingTop">@dimen/text_view_padding_top_2x</item>
        <item name="android:paddingBottom">@dimen/text_view_padding_bottom</item>
        <item name="android:paddingStart">@dimen/text_view_padding_start_2x</item>
        <item name="android:paddingLeft">@dimen/text_view_padding_start_2x</item>
        <item name="android:paddingEnd">@dimen/text_view_padding_end_2x</item>
        <item name="android:paddingRight">@dimen/text_view_padding_end_2x</item>
    </style>

    <style name="TextView_subtitle" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:paddingTop">@dimen/text_view_padding_top_2x</item>
        <item name="android:paddingBottom">@dimen/text_view_padding_bottom</item>
        <item name="android:paddingStart">@dimen/text_view_padding_start_2x</item>
        <item name="android:paddingLeft">@dimen/text_view_padding_start_2x</item>
        <item name="android:paddingEnd">@dimen/text_view_padding_end_2x</item>
        <item name="android:paddingRight">@dimen/text_view_padding_end_2x</item>
    </style>

    <!-- App bar style -->
    <style name="TourGuideAppBarStyle" parent="style/Widget.AppCompat.Light.ActionBar.Solid.Inverse"></style>

    <!-- Style for a tab that displays a category name -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

</resources>
